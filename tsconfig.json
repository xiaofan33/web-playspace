{
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./demos/*"]
    },

    "allowJs": true,
    "noEmit": true,
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
