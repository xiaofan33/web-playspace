{
  "compilerOptions": {
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./demos/*"]
    },
    "noEmit": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "moduleDetection": "force",
    "strict": true,
    "skipLibCheck": true,
    "verbatimModuleSyntax": true
  }
}
